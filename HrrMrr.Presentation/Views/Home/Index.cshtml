@{
    ViewData["Title"] = "HrrMrr | Anasayfa";

    if (ViewBag.kullaniciGiris != null)
    {
        if (ViewBag.roleId == "2")
        {
            Layout = "~/Views/Shared/_LayoutAfterLoginUser.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
        }

    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

